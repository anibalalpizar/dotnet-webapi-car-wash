@{
    ViewData["Title"] = "Reports";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5>Clients to Contact</h5>
                </div>
                <div class="card-body">
                    <p>Report of clients who need to be contacted to schedule a wash.</p>
                    <a href="@Url.Action("ClientsToContact", "Report")" class="btn btn-primary">View Report</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5>Wash Statistics</h5>
                </div>
                <div class="card-body">
                    <p>General statistics on completed washes.</p>
                    <a href="@Url.Action("WashStatistics", "Report")" class="btn btn-primary">View Statistics</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5>Customer Activity</h5>
                </div>
                <div class="card-body">
                    <p>Detailed report on the activity of a specific customer.</p>
                    <a href="@Url.Action("CustomerActivity", "Report")" class="btn btn-primary">View Activity</a>
                </div>
            </div>
        </div>
    </div>
</div>
