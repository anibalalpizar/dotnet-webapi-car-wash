@{
    ViewData["Title"] = "Actividad del Cliente";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />
    
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }
    
    <div class="row mb-3">
        <div class="col-md-6">
            <p>Selecciona un cliente para ver su actividad detallada.</p>
        </div>
        <div class="col-md-6 text-end">
            <a href="@Url.Action("Index", "Report")" class="btn btn-secondary">Volver</a>
        </div>
    </div>
    
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Seleccionar Cliente</h5>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("CustomerActivity", "Report", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label for="customerId" class="form-label">Cliente:</label>
                            @Html.DropDownList("customerId", ViewBag.CustomerSelectList as SelectList, "Seleccione un cliente...", new { @class = "form-select" })
                            @Html.ValidationMessage("customerId", "", new { @class = "text-danger" })
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Ver Actividad</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>